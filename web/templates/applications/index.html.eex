	  <label for="signup-email" class="navbar-label">here's my email</label>
	  <input name="application[email]" id="signup-email" type="email" class="form-control" placeholder="your@email.luv" required>
	</div>
	<button type="submit" class="btn btn-primary">keep me informed</button>
      </form>
    <% end %>
  </div>
