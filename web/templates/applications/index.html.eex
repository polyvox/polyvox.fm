<main class="shadowed">
  <div class="splash">
    <header class="content-section text-center" id="logo-holder">
      <div class="icon">
        <svg width="100%" height="100%" viewBox="0 0 193 193" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xml:space="preserve">
